@using TheFipster.Minecraft.Speedrun.Domain
@model RunInfo

<div class="card border-secondary">
    <div class="card-header"><h2>Timings</h2></div>
    <div class="card-body">
        <ul class="list-group">
            @foreach (var split in Model.Timings.Splits.OrderBy(x => x.Timestamp))
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @if (Model.Timings.StartedOn.HasValue)
                    {
                        <span>@(split.Timestamp - Model.Timings.StartedOn.Value)</span>
                    }
                    else
                    {
                        <span>@split.Timestamp.ToString("HH:mm:ss")</span>
                    }
                    <span>@split.Type</span>
                </li>
            }
        </ul>
    </div>
</div>