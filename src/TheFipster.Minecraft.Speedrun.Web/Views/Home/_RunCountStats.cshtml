@using TheFipster.Minecraft.Speedrun.Domain
@model RunCounts

<div class="card border-secondary">
    <div class="card-header">
        <h2>Stats</h2>
    </div>
    <div class="card-body">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>Attempts</span>
                <span>
                    @Model.Attempts
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>Reached the Nether</span>
                <span>
                    @Model.Nether
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>Found a Fortress</span>
                <span>
                    @Model.Fortresses
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>Returned from Nether</span>
                <span>
                    @Model.Search
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>Reached Stronghold</span>
                <span>
                    @Model.Stronghold
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>Found End Portal</span>
                <span>
                    @Model.End
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>Killed the Dragon</span>
                <span>
                    @Model.Finished
                </span>
            </li>
        </ul>
    </div>
</div>