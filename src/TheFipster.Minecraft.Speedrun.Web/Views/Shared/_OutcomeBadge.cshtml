@using TheFipster.Minecraft.Analytics.Domain
@model Outcomes
@{
    var badgeClass = string.Empty;
    switch (Model)
    {
        case Outcomes.Finished:
            {
                badgeClass = "badge-success";
                break;
            }
        case Outcomes.ResetEnd:
            {
                badgeClass = "badge-secondary";
                break;
            }
        case Outcomes.ResetStronghold:
            {
                badgeClass = "badge-info";
                break;
            }
        case Outcomes.ResetSearch:
            {
                badgeClass = "badge-primary";
                break;
            }
        case Outcomes.ResetFortress:
            {
                badgeClass = "badge-warning";
                break;
            }
        case Outcomes.ResetNether:
            {
                badgeClass = "badge-warning";
                break;
            }
        case Outcomes.ResetSpawn:
            {
                badgeClass = "badge-light";
                break;
            }
        case Outcomes.Discarded:
            {
                badgeClass = "badge-dark";
                break;
            }
        case Outcomes.Untouched:
            {
                badgeClass = "badge-danger";
                break;
            }
        case Outcomes.Unknown:
            {
                badgeClass = "badge-danger";
                break;
            }
    }
}

<span class="badge @badgeClass">@Model</span>
