@model ImportIndexViewModel
@{
    ViewData["Title"] = "Synchronize";
}

<div class="jumbotron text-center">
    <img class="rounded greetings-mob" height="150" width="150" src="/speedrun/img/blocks/chest.png" />
    <h1 class="display-4">Storage Sync</h1>
    <p class="lead">Lets take a look into the server chest and see what worlds we can discover.</p>
</div>

<h3>Mobs</h3>
<ul>
    @foreach (var blah in Model.Mobs)
    {
        <li>@blah</li>
    }
</ul>

<h3>Biomes</h3>
<ul>
    @foreach (var blah in Model.Biomes)
    {
        <li>@blah</li>
    }
</ul>

<h3>Unknown Entities</h3>
<ul>
    @foreach (var blah in Model.UnknownEntities)
    {
        <li>@blah</li>
    }
</ul>

<h3>Criteria</h3>
<ul>
    @foreach (var blubb in Model.Criteria)
    {
        <li>@blubb</li>
    }
</ul>

<h3>Unknown Criteria</h3>
<ul>
    @foreach (var blah in Model.UnknownCriteria)
    {
        <li>@blah</li>
    }
</ul>

