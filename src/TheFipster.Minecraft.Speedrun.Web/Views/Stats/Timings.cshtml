@model StatsTimingsViewModel
@{
    ViewData["Title"] = "Timings";
}

<div class="row">
    <div class="col">
        <h1>Timings</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <h2>Fastest Sections</h2>
    </div>
</div>

<div class="row">
    @foreach (var timing in Model.FastestSections)
    {
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card border-secondary">
            <div class="card-header">
                <h2>@timing.Value.Section</h2>
            </div>
            <div class="card-body">
                <blockquote class="blockquote">
                    <p class="h3">@TimeSpan.FromMilliseconds(timing.Value.Timing.Value).ToString(@"mm\:ss") min</p>
                    <footer class="blockquote-footer">
                        achieved in Run <a asp-controller="Run" asp-action="Name" asp-route-worldname="@timing.Value.Run.Worldname">#@timing.Value.Run.Index</a>
                    </footer>
                </blockquote>
            </div>
        </div>
    </div>
    }
</div>


<div class="row">
    <div class="col">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th></th>
                    <th>Spawn</th>
                    <th>The End</th>
                    <th>Fortress</th>
                    <th>Search</th>
                    <th>Stronghold</th>
                </tr>
                @foreach (var period in Model.Stats)
                {
                <tr>
                    <td>@period.Key</td>
                    @foreach (var timing in period.Value)
                        {
                    <td>
                        @timing.Section<br />
                        @timing.Minimum.ToString(@"mm\:ss")
                        -
                        @timing.Maximum.ToString(@"mm\:ss")<br />
                        @timing.Average.ToString(@"mm\:ss")
                        (+/- @timing.StandardDeviation.ToString(@"mm\:ss"))
                    </td>
                        }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
