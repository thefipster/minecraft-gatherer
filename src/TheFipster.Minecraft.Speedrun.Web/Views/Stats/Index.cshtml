
@{
    ViewData["Title"] = "Stats";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: "Stats/Heatmap"
            }).then(function (data) {
                $('#Heatmap').calendar_yearview_blocks({
                    data: JSON.stringify(data),
                    colors: {
                        'default': '#424949',
                        'at least 50': '#A93226',
                        'at least 30': '#E67E22',
                        'at least 20': '#F1C40F',
                        'at least 10': '#2ECC71',
                        'at least 5': '#3498DB',
                        'at least 1': '#566573',
                    },
                    stylize_today: true,
                    always_show_tooltip: true
                });
            });
        });
    </script>
}

<div class="row">
    <div class="col">
        <h1>Statistics</h1>
    </div>
</div>


<div class="row">
    <div class="col">
        <h2>Attempts</h2>
        <div id="Heatmap"></div>
    </div>
</div>

