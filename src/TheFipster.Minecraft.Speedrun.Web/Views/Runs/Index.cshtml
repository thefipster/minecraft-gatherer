@model RunListViewModel
@{
    ViewData["Title"] = "Runs";
    int count = 1;
}

<div class="row">
    <div class="col">
        <h1>Finished Runs</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="btn-group" role="group">
            <a class="btn btn-primary">Finished</a>
            <a class="btn btn-secondary" asp-controller="Runs" asp-action="Started">All Started</a>
            <a class="btn btn-secondary" asp-controller="Runs" asp-action="All">and discards</a>
            <a class="btn btn-secondary" asp-controller="Runs" asp-action="Garbage">and all else</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-hover">
            <tbody>
                @foreach (var run in Model.Runs.OrderBy(x => x.Runtime))
                {
                    @await Html.PartialAsync("_LineFinished", run, new ViewDataDictionary(ViewData) { { "Count", count } });
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
